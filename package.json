{
  "name": "node-2021",
  "version": "1.0.0",
  "description": "Cross-country Global Mentoring Program NodeJS 2021",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && NODE_ENV=production node -r dotenv/config dist/app.js",
    "server:dev": "nodemon -r dotenv/config --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "fill-users-db": "ts-node -r dotenv/config src/scripts/fill-users-db.ts",
    "fill-groups-db": "ts-node -r dotenv/config src/scripts/fill-groups-db.ts",
    "lint": "eslint . --ext .ts --ignore-pattern node_modules/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikita-kandratsyeu/node-2021"
  },
  "author": "Mikita Kandratsyeu <nickondr.production@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.32",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^3.9.9"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "ts-node": "^9.1.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}
